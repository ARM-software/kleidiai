# Indicates this is the top-level EditorConfig.
root = true

# Apply these settings to all files.
[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

# Override settings.
[*.{json,yml,yaml}]
indent_size = 2

# Override settings.
[*.{c,cpp,h,hpp}]
indent_size = unset

# Override settings.
[LICENSES/*]
indent_size = unset
